{
  "name": "Detective Theme",
  "description": "Dark, mysterious theme inspired by Victorian-era detective stories",
  "version": "1.0.0",
  "author": "Baker Street Laboratory",
  
  "colors": {
    "primary": {
      "main": "#2C1810",
      "light": "#4A2C1A",
      "dark": "#1A0F08",
      "contrast": "#F5F5DC"
    },
    "secondary": {
      "main": "#8B4513",
      "light": "#A0522D",
      "dark": "#654321",
      "contrast": "#FFFFFF"
    },
    "accent": {
      "main": "#DAA520",
      "light": "#FFD700",
      "dark": "#B8860B",
      "contrast": "#2C1810"
    },
    "background": {
      "primary": "#1A1A1A",
      "secondary": "#2D2D2D",
      "paper": "#3A3A3A",
      "elevated": "#4A4A4A"
    },
    "text": {
      "primary": "#F5F5DC",
      "secondary": "#D3D3D3",
      "disabled": "#A0A0A0",
      "hint": "#808080"
    },
    "error": {
      "main": "#D32F2F",
      "light": "#EF5350",
      "dark": "#C62828",
      "contrast": "#FFFFFF"
    },
    "warning": {
      "main": "#FFA000",
      "light": "#FFB74D",
      "dark": "#F57C00",
      "contrast": "#000000"
    },
    "info": {
      "main": "#1976D2",
      "light": "#42A5F5",
      "dark": "#1565C0",
      "contrast": "#FFFFFF"
    },
    "success": {
      "main": "#388E3C",
      "light": "#66BB6A",
      "dark": "#2E7D32",
      "contrast": "#FFFFFF"
    }
  },
  
  "typography": {
    "fontFamily": {
      "primary": "\"Times New Roman\", \"Georgia\", serif",
      "secondary": "\"Crimson Text\", serif",
      "monospace": "\"Courier New\", \"Monaco\", monospace",
      "display": "\"Playfair Display\", serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "full": "9999px"
  },
  
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
  },
  
  "assets": {
    "logo": "assets/svg/logos/baker_street_logo.svg",
    "favicon": "assets/icons/app/favicon.ico",
    "background": {
      "main": "assets/images/backgrounds/vintage_paper.jpg",
      "pattern": "assets/images/backgrounds/detective_pattern.png"
    },
    "icons": {
      "search": "assets/svg/icons/magnifying_glass.svg",
      "research": "assets/svg/icons/research.svg",
      "report": "assets/svg/icons/report.svg",
      "settings": "assets/svg/icons/settings.svg"
    }
  },
  
  "components": {
    "button": {
      "primary": {
        "background": "#DAA520",
        "color": "#2C1810",
        "border": "1px solid #B8860B",
        "hover": {
          "background": "#FFD700",
          "transform": "translateY(-1px)"
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "#F5F5DC",
        "border": "1px solid #8B4513",
        "hover": {
          "background": "#8B4513",
          "color": "#FFFFFF"
        }
      }
    },
    "card": {
      "background": "#3A3A3A",
      "border": "1px solid #4A4A4A",
      "borderRadius": "0.5rem",
      "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.3)",
      "padding": "1.5rem"
    },
    "input": {
      "background": "#2D2D2D",
      "border": "1px solid #4A4A4A",
      "color": "#F5F5DC",
      "placeholder": "#A0A0A0",
      "focus": {
        "border": "1px solid #DAA520",
        "shadow": "0 0 0 3px rgba(218, 165, 32, 0.1)"
      }
    },
    "navbar": {
      "background": "#2C1810",
      "border": "1px solid #4A2C1A",
      "color": "#F5F5DC",
      "height": "4rem"
    },
    "sidebar": {
      "background": "#1A1A1A",
      "border": "1px solid #2D2D2D",
      "width": "16rem"
    }
  },
  
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}
