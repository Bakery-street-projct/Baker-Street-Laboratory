# Baker Street Laboratory - Environment Variables Template
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# AI/LLM API Keys
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI/Gemini (if using)
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Search Engine APIs
# =============================================================================

# Google Custom Search
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here
GOOGLE_CSE_API_KEY=your_google_cse_api_key_here

# Bing Search API
BING_API_KEY=your_bing_api_key_here

# =============================================================================
# Research Database APIs
# =============================================================================

# ArXiv (usually no key needed, but rate limiting may apply)
ARXIV_API_BASE=http://export.arxiv.org/api/query

# PubMed/NCBI (optional, for enhanced access)
NCBI_API_KEY=your_ncbi_api_key_here

# Semantic Scholar (optional)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Vector Database
VECTOR_DB_PATH=data/vector_store
VECTOR_DB_TYPE=chroma

# Metadata Database
METADATA_DB_PATH=data/metadata.db
METADATA_DB_TYPE=sqlite

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Research Pipeline Settings
MAX_RESEARCH_ITERATIONS=5
CONVERGENCE_THRESHOLD=0.95
SAVE_INTERMEDIATE_RESULTS=true

# =============================================================================
# Privacy and Security
# =============================================================================

# Data Anonymization
ANONYMIZE_DATA=true
ENCRYPT_SENSITIVE_DATA=true
AUDIT_TRAIL_ENABLED=true

# =============================================================================
# Optional: Local LLM Configuration
# =============================================================================

# Ollama (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Hugging Face (if using transformers)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# Optional: Cloud Storage
# =============================================================================

# AWS S3 (if using for data storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name_here

# Google Cloud Storage (if using)
GOOGLE_CLOUD_PROJECT=your_gcp_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# =============================================================================
# Optional: Monitoring and Analytics
# =============================================================================

# Weights & Biases (for experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=baker-street-laboratory

# =============================================================================
# Development and Testing
# =============================================================================

# Test Configuration
TEST_MODE=false
MOCK_API_CALLS=false
TEST_DATA_PATH=tests/data

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
